# Site Configuration
NEXT_PUBLIC_BASE_URL=https://yourdomain.com
NEXT_PUBLIC_SITE_NAME=נטורליי מרענן

# DEPLOYMENT_URL - CRITICAL for PayPlus payment callbacks
# Must be publicly accessible HTTPS URL (not localhost!)
# PayPlus needs to reach this URL to send payment confirmations
DEPLOYMENT_URL=https://yourdomain.com

# Database
DATABASE_URL=./juice_website.db

# Payment Gateway (PayPlus)
PAYPLUS_API_KEY=your_api_key
PAYPLUS_SECRET_KEY=your_secret_key
PAYPLUS_PAGE_REQUEST_UID=your_page_uid

# Telegram Bot (Optional)
TELEGRAM_BOT_TOKEN=your_bot_token
TELEGRAM_CHAT_ID=your_chat_id

# Email Configuration (REQUIRED for order notifications)
# SMTP server configuration - used for sending order confirmations
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_USER=your-email@example.com
EMAIL_PASSWORD=your-email-password
EMAIL_FROM=noreply@yourdomain.com

# Examples for different providers:
# Gmail: EMAIL_HOST=smtp.gmail.com EMAIL_PORT=587 (use App Password)
# Outlook: EMAIL_HOST=smtp-mail.outlook.com EMAIL_PORT=587
# Yahoo: EMAIL_HOST=smtp.mail.yahoo.com EMAIL_PORT=587

# Admin Authentication
ADMIN_USERNAME=admin
ADMIN_PASSWORD_HASH=your_hashed_password

# Image Optimization
NEXT_PUBLIC_IMAGE_QUALITY=85
NEXT_PUBLIC_IMAGE_FORMATS=webp,avif

# Analytics (Optional)
NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX

# SEO
NEXT_PUBLIC_SITE_DESCRIPTION=חנות מיצים טבעיים טריים, סמוזי, סלטי פירות וצלחות בריאות
